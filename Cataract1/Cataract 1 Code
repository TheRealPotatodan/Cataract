            stickyPlatform2.centerY=0
            stickyPlatform2.centerX=5000
            stickyPlatform3.visible=False
            stickyPlatform3.centerY=0
            stickyPlatform3.centerX=5000
            
        if ((advice2.visible==True) and (player.centerX>400) and (player.centerY>100)):
            player.centerX=400
            
        if ((advice2.visible==True) and (player.centerX>400) and (player.centerY<100)):
            player.centerX=0
            player.centerY=85
            platform.centerY=353
