app.stepsPerSecond=60

def onStep():
    if (paused.visible==False):

#Jumping Function--------------------------------------------------------------------

        if (player.rotateAngle==180):
            player.centerY-=player.jumpY
        else:
            player.centerY+=player.jumpY
        
        if (player.jumping):
            player.jumpY+=.2

#PlayerMovementOnObjects-------------------------------------------------------------
            
        if (player.hitsShape(ground)):
            player.move=0
            player.jumpY=0
            player.jumping=False
            
        elif (player.hitsShape(ground2)):
            player.move=0
            player.jumpY=0
            player.jumping=False
            
        elif (player.hitsShape(ground3)):
            player.move=0
            player.jumpY=0
            player.jumping=False
            
        elif (player.hitsShape(platform)):
            player.move=1
            player.jumpY=0
            player.jumping=False
        
        elif (player.hitsShape(platform2)):
            player.move=1
            player.jumpY=0
            player.jumping=False
            
        elif (player.hitsShape(platform3)):
            player.move=1
            player.jumpY=0
            player.jumping=False
        
        elif (player.hitsShape(platform4)):
            player.move=1
            player.jumpY=0
            player.jumping=False
            
        elif (player.hitsShape(platform5)):
            player.move=1
            player.jumpY=0
            player.jumping=False
        
        elif (player.hitsShape(platform6)):
            player.move=1
            player.jumpY=0
            player.jumping=False
        
        elif (player.hitsShape(platform7)):
            player.move=1
            player.jumpY=0
            player.jumping=False
        
        elif (player.hitsShape(platform8)):
            player.move=1
            player.jumpY=0
            player.jumping=False
        
        elif (player.hitsShape(platform9)):
            player.move=1
            player.jumpY=0
            player.jumping=False
        
        elif (player.hitsShape(platform10)):
            player.move=1
            player.jumpY=0
            player.jumping=False
        
        elif (player.hitsShape(stickyPlatform)):
            player.top=stickyPlatform.bottom
            player.move=1
            player.jumpY=0
            player.jumping=False
            
        elif (player.hitsShape(stickyPlatform2)):
            player.top=stickyPlatform2.bottom
            player.move=1
            player.jumpY=0
            player.jumping=False
            
        elif (player.hitsShape(stickyPlatform3)):
            player.top=stickyPlatform3.bottom
            player.move=1
            player.jumpY=0
            player.jumping=False
            
        elif (player.hitsShape(stickyPlatform4)):
            player.top=stickyPlatform4.bottom
            player.move=1
            player.jumpY=0
            player.jumping=False
    
        elif (player.hitsShape(stickyPlatform5)):
            player.top=stickyPlatform5.bottom
            player.move=1
            player.jumpY=0
            player.jumping=False
        
        else:
            player.jumpY+=.1 
            
#screen 4 dangerBar functions--------------------------------------------------------
    
        if (player.hitsShape(dangerBar) and (advice3.visible==True)):
            player.centerX=12
            player.centerY=84
            
        if (player.hitsShape(dangerBar2) and (advice3.visible==True)):
            player.centerX=12
            player.centerY=84
            
        if (player.hitsShape(dangerBar3) and (advice3.visible==True)):
            player.centerX=12
            player.centerY=84
            
        if (player.hitsShape(dangerBar4) and (advice3.visible==True)):
            player.centerX=12
            player.centerY=84
            
        if (player.hitsShape(dangerBar5) and (advice3.visible==True)):
            player.centerX=12
            player.centerY=84
            
        if (player.hitsShape(dangerBar6) and (advice3.visible==True)):
            player.centerX=12
            player.centerY=84
            
        if (player.hitsShape(dangerBar7) and (advice3.visible==True)):
            player.centerX=12
            player.centerY=84
            
        if (player.hitsShape(dangerBar8) and (advice3.visible==True)):
            player.centerX=12
            player.centerY=84
        
        if (player.hitsShape(dangerBar9) and (advice3.visible==True)):
            player.centerX=12
            player.centerY=84
            
        if (player.hitsShape(dangerBar10) and (advice3.visible==True)):
            player.centerX=12
            player.centerY=84
            
        if (player.hitsShape(dangerBar11) and (advice3.visible==True)):
            player.centerX=12
            player.centerY=84
        
        if (player.hitsShape(dangerBar12) and (advice3.visible==True)):
            player.centerX=12
            player.centerY=84
        
#screen 5 dangerBar functions--------------------------------------------------------
    
        if (player.hitsShape(dangerBar) and (advice4.visible==True)):
            player.centerX=320
            player.centerY=5
            player.rotateAngle=0
            
        if (player.hitsShape(dangerBar2) and (advice4.visible==True)):
            player.centerX=320
            player.centerY=5
            player.rotateAngle=0
            
        if (player.hitsShape(dangerBar3) and (advice4.visible==True)):
            player.centerX=320
            player.centerY=5
            player.rotateAngle=0
            
        if (player.hitsShape(dangerBar4) and (advice4.visible==True)):
            player.centerX=320
            player.centerY=5
            player.rotateAngle=0
            
        if (player.hitsShape(dangerBar5) and (advice4.visible==True)):
            player.centerX=320
            player.centerY=5
            player.rotateAngle=0
            
        if (player.hitsShape(dangerBar6) and (advice4.visible==True)):
            player.centerX=320
            player.centerY=5
            player.rotateAngle=0
            
        if (player.hitsShape(dangerBar7) and (advice4.visible==True)):
            player.centerX=320
            player.centerY=5
            player.rotateAngle=0
            
        if (player.hitsShape(dangerBar8) and (advice4.visible==True)):
            player.centerX=320
            player.centerY=5
            player.rotateAngle=0
        
        if (player.hitsShape(dangerBar9) and (advice4.visible==True)):
            player.centerX=320
            player.centerY=5
            player.rotateAngle=0
            
        if (player.hitsShape(dangerBar10) and (advice4.visible==True)):
            player.centerX=320
            player.centerY=5
            player.rotateAngle=0
            
        if (player.hitsShape(dangerBar11) and (advice4.visible==True)):
            player.centerX=320
            player.centerY=5
            player.rotateAngle=0
        
        if (player.hitsShape(dangerBar12) and (advice4.visible==True)):
            player.centerX=320
            player.centerY=5
            player.rotateAngle=0
        
        if (player.hitsShape(dangerBar13) and (advice4.visible==True)):
            player.centerX=320
            player.centerY=5
            player.rotateAngle=0
            
        if (player.hitsShape(dangerBar14) and (advice4.visible==True)):
            player.centerX=320
            player.centerY=5
            player.rotateAngle=0
            
#sleeping
        if (player.sleeping==True):
            player.rotateAngle=90
            player.bottom=262
            player.right=392
            player.move=2
            player.jumpY=0
            player.jumping=False
    
#gravcube function-------------------------------------------------------------------
            
        if (gravCubeUp.containsShape(player)):
            player.rotateAngle=180
            player.centerY = player.centerY-20
        
        if (gravCubeDown.containsShape(player)):
            player.rotateAngle=0
            player.centerY = player.centerY+10
    
#Stuck! function---------------------------------------------------------------------
    
        if ((player.bottom>284) and (player.hitsShape(ground)==True)):
            grounded.visible=True
            grounded.value='Stuck!'
            grounded.centerX=player.centerX
            grounded.centerY=player.centerY-30
            
        elif ((player.bottom>284) and (player.hitsShape(ground2)==True)):
            grounded.visible=True
            grounded.value='Stuck!'
            grounded.centerX=player.centerX
            grounded.centerY=player.centerY-30
        
        elif ((player.bottom>284) and (player.hitsShape(ground3)==True)):
            grounded.visible=True
            grounded.value='Stuck!'
            grounded.centerX=player.centerX
            grounded.centerY=player.centerY-30
    
        elif ((player.bottom>ground.top+60) and (player.hitsShape(ground)==False) and (player.hitsShape(ground2)==False) and (player.hitsShape(ground3)==False)):
            grounded.visible=True
            grounded.value='AHHHHHHHHHHHHHHHHHHHHHHHHHH!'
            grounded.centerX=player.centerX
            grounded.centerY=player.centerY-30
        else:
            grounded.visible=False
            
#Screens-----------------------------------------------------------------------------
            
    #Screen 1
    
        if ((house.visible==True) and (player.centerX<0)):
            player.centerX=0 
            
        if ((player.centerX>400) and (house.visible==True)):
            player.centerX=0
            ground.centerX=-40
            ground2.centerX=540
            sign.visible=True
            advice_.visible=True
            house.visible=False
            advice.visible=False
            
    #Screen2    
    
        if ((sign.visible==True) and (player.centerX<0)):
            sign.visible=False
            advice_.visible=False
            advice.visible=True
            house.visible=True
            ground.centerX+=200
            player.centerX=400
        
        if ((sign.visible==True) and (player.centerY>650)):
            player.centerX=13
            player.centerY=255
            if (grounded.visible==True):
                player.centerY=228
    
        if ((sign.visible==True) and (player.centerX>400)):
            sign.visible=False
            advice_.visible=False
            ground.centerX=200
            ground2.centerX=800
            player.centerX=0
    
            platform.visible=True
            platform.centerX=80
            platform.centerY=210
            platform2.visible=True
            platform2.centerX=240
            platform2.centerY=110
            platform3.centerX=45
            platform3.centerY=40
            platform3.visible=True
            advice1.visible=True
            
    #screen3      
    
        if ((advice1.visible==True) and (player.centerX>400)):
            player.centerX=400 
            
        if ((advice1.visible==True) and (player.centerX<0)):
            player.centerX=400
            ground.centerX=0
            ground2.centerX=540
            sign.visible=True
            advice_.visible=True
            platform.visible=False
            platform.centerX=5000
            platform.centerY=0
            platform2.visible=False
            platform2.centerX=5000
            platform2.centerY=0
            platform3.visible=False
            platform3.centerX=5000
            platform3.centerY=0
            advice1.visible=False
            
        if ((advice1.visible==True) and (player.centerY<0)):
            player.centerY=380
            ground.centerY=500
            ground2.centerY=500
            ground3.centerY=500
            advice1.visible=False
            advice2.visible=True
            platform.centerX=45
            platform.centerY=400
            platform2.centerX=360
            platform2.centerY=270
            platform3.centerX=20
            platform3.centerY=120
            stickyPlatform.visible=True
            stickyPlatform.centerX=45
            stickyPlatform.centerY=290
            stickyPlatform.width=230
            stickyPlatform.left=0
            stickyPlatform2.visible=True
            stickyPlatform2.centerX=250
            stickyPlatform2.centerY=70
            stickyPlatform2.width=140
            stickyPlatform2.right=400
            stickyPlatform3.visible=True
            stickyPlatform3.centerX=200
            stickyPlatform3.centerY=170
            
    #screen 4    
    
        if ((advice2.visible==True) and (player.centerY>400)):
            player.centerY=0
            platform.visible=True
            platform.centerX=80
            platform.centerY=210
            platform2.visible=True
            platform2.centerX=240
            platform2.centerY=110
            platform3.centerX=45
