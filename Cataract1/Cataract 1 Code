#Player Movement and Actions---------------------------------------------------------

def onKeyHold(keys):
    if (('left' in keys) or ('a' in keys)):
        if ((grounded.visible==False) and (paused.visible==False)):
            if (player.rotateAngle==180):
                player.centerX+=3
            else:
                player.centerX-=3
            
    if (('right' in keys) or ('d' in keys)):
        if ((grounded.visible==False) and (paused.visible==False)):
            if (player.rotateAngle==180):
                player.centerX-=3
            else:
                player.centerX+=3
                
    if (('down' in keys) or ('s' in keys)):
        if (player.sleeping==False):
            if ((player.hitsShape(stickyPlatforms)==False) and (paused.visible==False)):
                if (player.rotateAngle==180):
                    playerLeg1.rotateAngle=270
                    playerLeg1.centerY=player.centerY-12
                    playerLeg2.rotateAngle=90
                    playerLeg2.centerY=player.centerY-12
                else:
                    playerLeg1.rotateAngle=90
                    playerLeg1.centerY=player.centerY+12
                    playerLeg2.rotateAngle=-90
                    playerLeg2.centerY=player.centerY+12

def onKeyRelease(keys):
    if (('down' in keys) or ('s' in keys)):
        if (player.sleeping==False):
            if ((player.hitsShape(stickyPlatforms)==False) and (paused.visible==False)):
                if (player.rotateAngle==180):
                    player.centerY+=10       
                    playerLeg1.rotateAngle=-180
                    playerLeg1.bottom=playerHead.top
                    playerLeg2.rotateAngle=180
                    playerLeg2.bottom=playerHead.top
                    
                else:    
                    player.centerY-=10       
                    playerLeg1.rotateAngle=0
                    playerLeg1.top=playerHead.bottom
                    playerLeg2.rotateAngle=0
                    playerLeg2.top=playerHead.bottom
        
def onKeyPress(key):
    if ((key == 'up') or (key == 'w') and (key == 'space')==False):
        if (enter.visible==False):
            if (exit.visible==False):
                if ((player.hitsShape(stickyPlatforms)==False) and (paused.visible==False)):
                    if (player.move<2):
                        player.jumping=True
                        player.jumpY= -5
                        player.move+=1
        
        if (enter.visible==True) and (house.visible==True):
            player.centerX=16
            player.centerY=260
            ground3.fill='saddleBrown'
            ground3.centerX=200
            ground2.centerX=600
            ground.centerX=-600
            house.visible=False
            advice.visible=False
            Table.visible=True
            couch.visible=True
            bed.visible=True
            exitDoor.visible=True
            familyPainting.visible=True
            familyPaintingMembers.visible=True
            app.background='white'
        
        if (exit.visible==True) and (house.visible==False):
            player.centerX=140
            player.centerY=260
            house.visible=True
            advice.visible=True
            exitDoor.visible=False
            exit.visible=False
            Table.visible=False
            couch.visible=False
            bed.visible=False
            familyPainting.visible=False
            familyPaintingMembers.visible=False
            ground.centerX=200
            ground3.centerX=-600
            app.background='lightSkyBlue'
    
    if (key=='s'):
        if (bed.visible==True):
            if (player.hitsShape(bed)):
                if (player.sleeping==False):
                    player.sleeping=True
                else:
                    player.sleeping=False
                    player.rotateAngle=0
                
    if (key=='p'):
        if (paused.visible==False):
            paused.visible=True
        else:
            paused.visible=False
                
def onMousePress(mouseX,mouseY):
    if (pauseButton.contains(mouseX,mouseY)==True):
        if (paused.visible==False):
            paused.visible=True
        else:
            paused.visible=False
            
            
            
            
            
            
            
            
            
            
